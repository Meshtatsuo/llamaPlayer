<html>
  <head>
    <meta charset="UTF-8" />
    <!-- https://developer.mozilla.org/en-US/docs/Web/HTTP/CSP -->
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; script-src 'self'"
    />
    <meta
      http-equiv="X-Content-Security-Policy"
      content="default-src 'self'; script-src 'self'"
    />
    <!-- //node_modules\materialize-css\dist\css\materialize.min.css -->
    <link rel="stylesheet" href="/css/materialize.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Llama Player</title>
  </head>
  <body class="dark-bg">

    <main>
      <div class="row">
        <div id="sidebar" class="col s12 m1 card-bg">
          <div class="row center-align">
            <div class="col s12">
              <a class="settings-trigger" href="#" target="_blank">
                <img src="/images/settings.svg" alt="settings-icon" />
              </a>
            </div>
          </div>
        </div>

        <div id="content" class="col s12 m11">
          {{{body}}}
        </div>
      </div>
    </main>

    <footer class="page-footer card-bg">
      <div class="footer">
        <div class="row">
          <!-- Volume Slider -->
          <div class="footer-item col s12 m3 left-align">
            <h6>Volume Slider Here</h6>
          </div>
          <!-- Transport -->
          <div class="footer-item col s12 m6 center-align">
            <!-- BEGIN TRANSPORT CONTROLS -->
            <div id="button-container" class="row">
              <!-- SHUFFLE -->
              <div class="col s2 offset-s1">
                <a href="#" id="shuffle-btn"><img
                    id="shuffle-img"
                    src="/images/transport_icons/ShuffleIcon.png"
                  /></a>
              </div>
              <!-- REWIND -->
              <div class="col s2">
                <a href="#" id="rewind-btn"><img
                    id="rewind-img"
                    src="/images/transport_icons/RewindIcon.png"
                  /></a>
              </div>
              <!-- PAUSE/PLAY -->
              <div class="col s2">
                <a href="#" id="play-btn"><img
                    id="play-img"
                    src="/images/transport_icons/PlayIcon.png"
                  /></a>
              </div>
              <!-- FORWARD -->
              <div class="col s2">
                <a href="#" id="forward-btn"><img
                    src="/images/transport_icons/FastForwardIcon.png"
                  /></a>
              </div>
              <!-- LOOP -->
              <div class="col s2">
                <a href="#" id="loop-btn"><img
                    src="/images/transport_icons/RepeatIcon.png"
                  /></a>
              </div>
            </div>
            <!-- PLAYBACK TIMELINE -->
            <div class="row">
              <div class="col s12 divider"></div>
            </div>
          </div>

          <!-- Credit -->
          <div class="footer-item col s12 m3 right-align">
            <h6>Built by Dominic Misasi</h6>
          </div>
        </div>
      </div>
    </footer>

    <!-- SCRIPTS -->
    <!-- Compiled and minified JavaScript -->
    <script
      src="/node_modules/materialize-css/dist/js/materialize.min.js"
    ></script>
    <script src="/node_modules/howler/dist/howler.js"></script>
    <script src="/js/GUI.js"></script>
    <script src="/js/audioManager.js"></script>

  </body>
</html>